{
    "name": "McLick",
    "description": "This is a test.",
    "version": "0.1",
    "permissions": [
        "http://*/*", "https://*/*",
        "storage"
    ],
    "background": {
        "persistent": true,
        "scripts": ["popup.js", "background.js"]
    },
    "browser_action": {
        "default_icon": "icon-off.png"
    },
    "manifest_version": 2,
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["jquery-1.11.3.min.js", "popup.js"],
        "all_frames": true
    }],
    "options_page": "options.html"
}
